// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "remote": false,
      "settings": {
        "context7_api_key": "${CONTEXT7_API_KEY}",
      },
    },
  },
  "disable_ai": false,
  "language_models": {
    "openai_compatible": {},
  },
  "tabs": {
    // https://zed.dev/docs/configuring-zed#editor-tabs
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "all",
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all",
  },
  "vertical_scroll_margin": 5,
  "format_on_save": "on",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "line_width": 1,
    "active_line_width": 1,
    "background_coloring": "indent_aware",
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
    "live-server": {
      "initialization_options": {
        "lazy": true,
        "start_port": 5000,
        "public": false,
      },
    },
  },
  "languages": {
    "YAML": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "off",
    },
    "Go": {
      "language_servers": ["gopls"],
    },
  },
  "base_keymap": "VSCode",
  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "minimal": {
        "name": "Minimal",
        "tools": {},
        "enable_all_context_servers": false,
        "context_servers": {
          "Context7": {
            "tools": {
              "query-docs": false,
              "resolve-library-id": false,
            },
          },
        },
      },
      "ask": {
        "name": "Ask",
        "tools": {
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true,
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "shadcn": {
            "tools": {
              "view_items_in_registries": true,
              "search_items_in_registries": true,
              "list_items_in_registries": true,
              "get_project_registries": true,
              "get_item_examples_from_registries": true,
              "get_audit_checklist": true,
              "get_add_command_for_items": true,
            },
          },
          "mcp-server-context7": {
            "tools": {
              "resolve-library-id": true,
              "query-docs": true,
            },
          },
        },
      },
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "google",
      "model": "gemini-3-flash-preview",
    },
    "button": true,
    "dock": "right",
    "default_width": 640,
    "default_height": 640,
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
  },
  "terminal": {
    "dock": "bottom",
    "font_size": 14,
    "default_height": 320,
    "default_width": 320,
    "keep_selection_on_copy": false,
    "working_directory": "current_project_directory",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "cursor_shape": "block",
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
    },
  },
  "ssh_connections": [
    {
      "host": "homelab",
      "args": [],
      "projects": [],
      "upload_binary_over_ssh": true,
    },
    {
      "host": "syslog",
      "args": [],
      "projects": [],
    },
  ],

  "icon_theme": "Catppuccin Latte",
  "vim_mode": true,
  "tab_size": 2,
  "preferred_line_length": 80,
  "soft_wrap": "editor_width",
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "theme": {
    "mode": "system",
    "light": "GitHub Light Colorblind",
    "dark": "GitHub Dark Colorblind",
  },
}
