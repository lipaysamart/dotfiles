// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "disable_ai": false,
  "language_models": {
    "openai_compatible": {
      "Qwen": {
        "api_url": "https://dashscope.aliyuncs.com/compatible-mode/v1",
        "available_models": [
          {
            "name": "qwen3-coder-30b-a3b-instruct",
            "max_tokens": 256000,
            "max_output_tokens": 64000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": false,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "deepseek-v3.2-exp",
            "max_tokens": 128000,
            "max_output_tokens": 64000,
            "max_completion_tokens": 96000,
            "capabilities": {
              "tools": false,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          },
          {
            "name": "qwen3-coder-480b-a35b-instruct",
            "max_tokens": 256000,
            "max_output_tokens": 64000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          }
        ]
      }
    }
  },
  "tabs": {
    // https://zed.dev/docs/configuring-zed#editor-tabs
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "show_close_button": "hover",
    "show_diagnostics": "all"
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": "all"
  },
  "vertical_scroll_margin": 5,
  "format_on_save": "on",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "line_width": 1,
    "active_line_width": 1,
    "background_coloring": "indent_aware"
  },
  "lsp": {
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--output.text.path="
        ]
      }
    }
  },
  "languages": {
    "YAML": {
      "tab_size": 2,
      "hard_tabs": false
    },
    "Go": {
      "language_servers": ["gopls", "golangci-lint"]
    }
  },
  "base_keymap": "VSCode",
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "button": true,
    "dock": "right",
    "default_width": 640,
    "default_height": 640
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "terminal": {
    "dock": "bottom",
    "font_size": 14,
    "default_height": 320,
    "default_width": 320,
    "keep_selection_on_copy": false,
    "working_directory": "current_project_directory",
    "blinking": "terminal_controlled",
    "copy_on_select": true,
    "cursor_shape": "block"
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "ssh_connections": [
    {
      "host": "homelab",
      "projects": [{ "paths": ["~/Git"] }]
    }
  ],
  "icon_theme": "Catppuccin Latte",
  "vim_mode": true,
  "tab_size": 2,
  "preferred_line_length": 80,
  "soft_wrap": "editor_width",
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "theme": {
    "mode": "system",
    "light": "Alabaster Dark",
    "dark": "Alabaster Dark"
  }
}
